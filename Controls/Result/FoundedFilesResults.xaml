<UserControl x:Class="SunamoWpf.Controls.Result.FoundedFilesResults"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:SunamoWpfControlsText="clr-namespace:SunamoWpf.Controls.Text"

             xmlns:local="clr-namespace:SunamoWpf.Controls.Result"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--<SunamoWpfControlsText:SearchInUC x:FieldModifier="public" 
                                            x:Name="txtFilter"></SunamoWpfControlsText:SearchInUC>-->

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" x:Name="sv">
                <StackPanel  Orientation="Vertical" x:FieldModifier="public" x:Name="sp">
                </StackPanel>
            </ScrollViewer>

            <TextBlock Grid.Row="1" FontSize="20" x:Name="tbNoResultsFound" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        </Grid>
    </Grid>
</UserControl>
